
<div class = "has-text-centered">
  <section class="hero is-primary">
      <div class="hero-body">
          <div class="container">
              <h1 class="title">
                  Listing code
              </h1>
          </div>
      </div>
  </section>
  <div class = "container">
      <div class="table-container" >
        <table class="table is-striped">
        <th>Student</th>
        <th>Assignment Name</th>
          <% @codes.each do |code| %>
              <tr>
                  <td><%= code.student_id %></td>
                  <td><%= code.assignment_name %></td>
                  <td><%= link_to 'Show', code_path(code) %></td>
                  <td><%= link_to 'Delete',  code_path(code), 
                          method: :Delete,
                          data: {confirm: 'Do you want to delete this file?'} %>
                  </td>
              </tr>
          <% end %>
        </table>
      </div>
      
      <button class="button is-info is-outlined">
          <%= link_to "New Code", new_code_path %>
      </button>
      <button class="button is-info is-outlined">
          <%= link_to "Home", root_path %>
      </button>
  </div>
</div>
