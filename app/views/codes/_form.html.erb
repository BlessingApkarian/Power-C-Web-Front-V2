<%= form_with(model: code) do |form| %>
  <% if code.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(code.errors.count, "error") %> prohibited this code from being saved:</h2>

      <ul>
        <% code.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :student_id %>
    <%= form.text_field :student_id %>
  </div>

  <div class="field">
    <%= form.label :assignment_name %>
    <%= form.text_field :assignment_name %>
  </div>

  <div class = "field">
    <%= form.label :file%>
    <%= form.file_field :file%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  
  <!--When a form is submitted, the fields of the form are sent to Rails as 
      parameters. These parameters can then be referenced inside the controller 
      actions, typically to perform a particular task.
  -->
<% end %>
